[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 140
tab_width = 2
trim_trailing_whitespace = true

[*.scss]

[{*.ats,*.cts,*.mts,*.ts,*tsx}]

[{*.cjs,*.js}]
ij_javascript_use_double_quotes = true

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
